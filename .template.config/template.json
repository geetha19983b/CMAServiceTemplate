{
  "author": "CMA",
  "classifications": [ "Web" ],
  "name": "CMA Starter Web API",
  "identity": "CMAWebapi", // Unique name for this template
  "shortName": "cmawebapi", // Short name that can be used on the cli
  "tags": {
    "language": "C#" // Specify that this template is in C#.
  },
  "symbols": {

    "ProjectName": {
      "type": "parameter",
      "replaces": "CMAService",
      "FileRename": "CMAService",
      "isRequired": true
    },
    "AddPromethus": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddSerilog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddSwagger": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddHealthCheck": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddTestProject": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddPolly": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddSql": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddMongo": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "AddKafka": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
   "sources": [
        {
            "modifiers": [
              {
                "condition": "(!AddTestProject)",
                "exclude": [
                  "CMAService.Tests/**"
                ]

              },
              {
                "condition": "(!AddSql)",
                "exclude": [
                  "CMAService.Repository/DBContext/AuthorContext.cs",
                  "CMAService.Repository/SqlDataAccess.cs"

                ]

              },
              {
                "condition": "(!AddMongo)",
                "exclude": [
                  "CMAService.Repository/DBContext/MongoDbSettings.cs",
                  "CMAService.Repository/MongoDataAccess.cs"
                ]

              },
              {
                "condition": "(!AddSql && !AddMongo)",
                "exclude": [
                  "CMAService.API/Controllers/AuthorController.cs",
                  "CMAService.Repository/Entities/Author.cs"
                ]

              },
              {
                "condition": "(!AddKafka)",
                "exclude": [
                  "CMAService.API/Kafka_Infra/**",
                  "CMAService.API/Controllers/OrderController.cs"
                ]

              }

            ]
        }
    ],
  "sourceName": "CMA.StarterWeb", // Will replace the string 'CMA.StarterWeb' with the value provided via -n.
  "preferNameDirectory": "true"
}